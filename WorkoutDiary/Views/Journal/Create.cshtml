@{
    ViewData["Title"] = "Добавить запись";
}

<div class="container-fluid">
    <h1 class="text-white animate-fade-in">Добавить запись</h1>

    <form method="post" enctype="multipart/form-data" class="entry-details animate-fade-in">
        <div class="left">
            <div class="mb-3">
                <label for="title" class="form-label">Название:</label>
                <input type="text" id="title" name="title" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="content" class="form-label">Текст записи:</label>
                <textarea id="content" name="content" class="form-control" required></textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Изображение:</label>
                <input type="file" id="image" name="image" class="form-control" accept="image/*" />
            </div>
        </div>
        <div class="actions">
            <button type="submit" class="btn btn-primary">Опубликовать</button>
        </div>
    </form>
</div>