@model WorkoutDiary.Models.JournalEntry
@{
    ViewData["Title"] = "Редактировать запись";
}

<div class="container-fluid">
    <h1 class="text-white animate-fade-in">Редактировать запись</h1>

    <form method="post" enctype="multipart/form-data" class="entry-details animate-fade-in">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="left">
            <div class="mb-3">
                <label for="title" class="form-label">Название:</label>
                <input type="text" id="title" name="title" class="form-control" value="@Model.Title" required />
            </div>
            <div class="mb-3">
                <label for="content" class="form-label">Текст записи:</label>
                <textarea id="content" name="content" class="form-control" required>@Model.Content</textarea>
            </div>
        </div>
        <div class="right">
            <div class="image-frame">
                @if (Model.Image != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" alt="@Model.Title" />
                }
                else
                {
                    <div class="placeholder">Нет изображения</div>
                }
            </div>
            <label for="image" class="form-label">Изменить изображение:</label>
            <input type="file" id="image" name="image" class="form-control" accept="image/*" />
            <p>Автор: @Model.Author.Username</p>
            <p>Дата создания: @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
        </div>
        <div class="actions">
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </form>
</div>