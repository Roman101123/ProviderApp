@model List<WorkoutDiary.Models.JournalEntry>
@{
    ViewData["Title"] = "Журнал тренировок";
}

<div class="container-fluid">
    <h1 class="text-white animate-fade-in">Журнал тренировок</h1>

    <!-- Форма поиска -->
    <form method="get" action="@Url.Action("Index")" class="search-form animate-fade-in">
        <div class="input-group mb-3">
            <input type="text" name="search" class="form-control" placeholder="Поиск по названию" value="@ViewBag.Search" />
            <button type="submit" class="btn btn-primary">Поиск</button>
        </div>
    </form>

    <!-- Кнопка добавления записи -->
    <div class="mb-4 animate-fade-in">
        <a asp-action="Create" class="btn btn-success">Добавить запись</a>
    </div>

    <!-- Список записей -->
    <div class="entries">
        @if (!Model.Any())
        {
            <p class="text-light">Записей пока нет. Добавьте первую!</p>
        }
        else
        {
            @foreach (var entry in Model)
            {
                <div class="entry-tile animate-fade-in">
                    @if (entry.Image != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(entry.Image)" alt="@entry.Title" class="entry-image" />
                    }
                    else
                    {
                        <div class="entry-image-placeholder">
                            <span>Нет изображения</span>
                        </div>
                    }
                    <h3 class="entry-title">@entry.Title</h3>
                    <a asp-action="Details" asp-route-id="@entry.Id" class="btn btn-outline-light btn-sm">Подробнее</a>

                    @if (entry.AuthorId == ViewBag.CurrentUserId)
                    {
                        <div class="actions mt-2">
                            <a asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-primary btn-sm">Редактировать</a>
                            <form asp-action="Delete" asp-route-id="@entry.Id" method="post" style="display:inline;" onsubmit="return confirm('Вы уверены, что хотите удалить эту запись?');">
                                <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                            </form>
                        </div>
                    }
                </div>
            }
        }
    </div>
</div>