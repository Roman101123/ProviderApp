<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Дневник тренировок</title>
    <style>
        header {
            display: flex;
            justify-content: space-between;
            padding: 10px;
            background-color: #f8f8f8;
            border-bottom: 1px solid #ccc;
        }

        footer {
            text-align: center;
            padding: 10px;
            background-color: #f8f8f8;
            border-top: 1px solid #ccc;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body> 
    <header>
        <nav>
            <a asp-controller="Home" asp-action="Index">Главная</a>
            <a asp-controller="Workouts" asp-action="Index">Дневник</a>
            <a asp-controller="Exercises" asp-action="Index">Упражнения</a>
        </nav>
        <div>
            @if (User.Identity.IsAuthenticated)
            {
                <span>Привет, @User.Identity.Name</span>
                <a asp-controller="Account" asp-action="Logout">Выйти</a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login">Войти</a>
                <a asp-controller="Account" asp-action="Register">Регистрация</a>
            }
        </div>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <p>© 2023 Дневник тренировок</p>
    </footer>
</body>
</html>