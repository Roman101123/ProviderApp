@model List<WorkoutDiary.Models.Tariff>
@{
    ViewData["Title"] = "Список тарифов";
}

<h2 class="text-white">Список тарифов</h2>

<a asp-action="Create" class="btn btn-success mb-3">Добавить тариф</a>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Название</th>
            <th>Скорость (Мбит/с)</th>
            <th>Цена (₽)</th>
            <th>Описание</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tariff in Model)
        {
            <tr>
                <td>@tariff.Name</td>
                <td>@tariff.Speed</td>
                <td>@tariff.Price</td>
                <td>@tariff.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@tariff.Id" class="btn btn-sm btn-primary">Редактировать</a>
                    <a asp-action="Details" asp-route-id="@tariff.Id" class="btn btn-sm btn-info">Подробнее</a>
                    <form asp-action="Delete" asp-route-id="@tariff.Id" method="post" style="display:inline;" onsubmit="return confirm('Удалить тариф?');">
                        <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
